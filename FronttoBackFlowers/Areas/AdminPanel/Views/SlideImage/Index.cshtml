@model List<SliderImage>

@{
    List<SliderImage> sliderImages = Model;
}
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Images</h4>
                  @if(sliderImages.Count == 0)
                  {
                    <a class="btn btn-primary" asp-controller="SlideImage" asp-action="Create">Create</a>
                  }
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>VatNo.</th>
                                <th>Created</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in sliderImages)
                            {
                                <tr>
                                    <td><img src="~/img/@item.Name" /></td>
                                
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                            <button type="submit" class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                                        </form>
                                    </td>
                                    <td><label class="badge badge-warning">In progress</label></td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>